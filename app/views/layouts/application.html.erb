<!DOCTYPE html>
<html>
<head>
  <title>Picolog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
	<%= current_user.name %> : <%=link_to "Logout", logout_path %>
	<br>
	<%= link_to(image_tag(current_user.image, :alt => current_user.screen_name), "https://twitter.com/" + current_user.screen_name) %>
<% else %>
	<%= link_to "Login", "/auth/twitter" %>
<% end %>

<%= yield %>

</body>
</html>
